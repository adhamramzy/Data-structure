#include <iostream>
#include <stack>  // Include the stack header

using namespace std;

int main() {
    stack<int> myStack;  // Create a stack of integers

    // Push elements onto the stack (LIFO order)
    myStack.push(10);
    myStack.push(20);
    myStack.push(30);

    cout << "Stack elements (from top to bottom): ";

    // Use a loop to print and remove all elements
    while (!myStack.empty()) {
        cout << myStack.top() << " ";  // Access the top element
        myStack.pop();                 // Remove the top element
    }
    cout << endl;

    // Additional operations
    cout << "Is stack empty? " << (myStack.empty() ? "Yes" : "No") << endl;

    // Add new elements
    myStack.push(40);
    myStack.push(50);

    cout << "Top element: " << myStack.top() << endl;
    cout << "Stack size: " << myStack.size() << endl;

    return 0;
}
